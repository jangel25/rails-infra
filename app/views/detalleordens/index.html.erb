        <td><%= detalleorden.orden.cliente.nombre %></td>
        <td><%= link_to 'Ver', detalleorden %></td>
        <td><%= link_to 'Modificar', edit_detalleorden_path(detalleorden) %></td>
        <td><%= link_to 'Eliminar', detalleorden, method: :delete, data: { confirm: 'Â¿seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

