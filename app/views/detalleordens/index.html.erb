      <th>Precioventa</th>
      <th>Orden</th>
      <th>Producto</th>
      <th>Cliente</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @detalleordens.each do |detalleorden| %>
      <tr>
        <td><%= detalleorden.cantidad %></td>
